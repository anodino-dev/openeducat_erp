<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="view_op_course_tree" model="ir.ui.view">
			<field name="name">op.course.tree</field>
			<field name="model">op.course</field>
			<field eval="8" name="priority" />
			<field name="arch" type="xml">
				<tree string="Course">
					<field name="name" />
					<field name="code" />
					<field name="section" />
					<field name="evaluation_type" />
					<field name="parent_id" />
					<field name="subject_ids" />
				</tree>
			</field>
		</record>
		<record id="view_op_course_form" model="ir.ui.view">
			<field name="name">op.course.form</field>
			<field name="model">op.course</field>
			<field eval="8" name="priority" />
			<field name="arch" type="xml">
				<form string="Course">
					<header groups="openeducat_core.group_op_back_office"></header>
					<sheet>
						<group>
							<group name="main1">
								<field name="name" />
								<field name="fullname" />
								<field name="code" />
								<field name="category_ids" widget="many2many_tags" />
							</group>
							<group name="main2">
								<field name="evaluation_type" />
								<field name="parent_id" />
								<field name="min_unit_load" />
								<field name="max_unit_load" />
							</group>
						</group>
						<notebook>
							<page name="data" string="Data">
								<group>
									<field name="summary" />
									<field name="topic_ids"
										context="{'default_course_id': context.get('id', active_id)}">
										<tree editable="bottom">
											<field name="sequence" widget="handle" />
											<field name="name" />
											<!-- <field name="course_id" invisible="1" /> -->
										</tree>
									</field>
								</group>
							</page>
							<page name="details" string="Details">
								<group>
									<field name="website_meta_description" />
									<field name="website_meta_title" />
									<field name="website_meta_keywords" />
								</group>
								<group>
									<group>
										<field name="recipients" />
										<field name="duration" />
										<field name="schedule" />
										<field name="seats" />
										<field name="requirements" />
									</group>
									<group>
										<field name="teaching_hours" />
										<field name="place" />
										<field name="mode" />
										<field name="type" />

									</group>
								</group>
							</page>
							<page name="subjects" string="Subjects">
								<group name="subject" string="Subjects">
									<field context="{'default_course_id': context.get('id', active_id)}"
										name="subject_ids" nolabel="1">
										<form string="Subject">
											<sheet>
												<group col="4">
													<field name="name" />
													<field name="code" />
													<field name="type" />
													<field name="subject_type" />
													<field name="grade_weightage" />
												</group>
											</sheet>
										</form>

									</field>
								</group>
							</page>
							<page name="batches" string="Batches">
								<group name="batch" string="Batches">
									<field context="{'default_course_id': context.get('id', active_id)}"
										name="batch_ids" nolabel="1">
										<form string="Batch">
											<header groups="openeducat_core.group_op_back_office"></header>
											<sheet>
												<group>
													<group>
														<field name="name" />
														<field name="code" />
													</group>
													<group>
														<field name="start_date" />
														<field name="end_date" />
													</group>
												</group>
											</sheet>
										</form>
									</field>
								</group>
							</page>
							<page name="faculties" string="Faculties">
								<group name="faculty" string="Faculties">
									<field name="faculty_ids" nolabel="1" />
								</group>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>
		<record id="view_op_course_search" model="ir.ui.view">
			<field name="name">op.course.search</field>
			<field name="model">op.course</field>
			<field eval="8" name="priority" />
			<field name="arch" type="xml">
				<search string="Course">
					<field name="name" />
					<field name="code" />
					<!-- <field name="section" /> -->
					<field name="evaluation_type" />
					<field name="parent_id" />
					<newline />
					<group expand="0" string="Group By...">
						<filter context="{'group_by':'evaluation_type'}" domain="[]"
							string="Evaluation Type" />
						<filter context="{'group_by':'parent_id'}" domain="[]"
							string="Parent Course" />
					</group>
				</search>
			</field>
		</record>
		<record id="act_open_op_course_view" model="ir.actions.act_window">
			<field name="name">Courses</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">op.course</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_op_course_search" />
			<field name="domain">[]</field>
			<field name="context">{}</field>
		</record>
		<record id="act_open_op_course_view_form" model="ir.actions.act_window.view">
			<field name="act_window_id" ref="act_open_op_course_view" />
			<field eval="20" name="sequence" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_op_course_form" />
		</record>
		<record id="act_open_op_course_view_tree" model="ir.actions.act_window.view">
			<field name="act_window_id" ref="act_open_op_course_view" />
			<field eval="10" name="sequence" />
			<field name="view_mode">tree</field>
			<field name="view_id" ref="view_op_course_tree" />
		</record>
	</data>
</odoo>
